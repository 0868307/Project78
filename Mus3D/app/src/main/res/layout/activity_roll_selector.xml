<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.resist.mus3d.RollSelector">

    <TextView
            android:text="@string/rollSelector_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView2"
            android:textStyle="bold"
            android:textSize="30sp" />

    <RadioGroup
            android:id="@+id/rg_Rol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true">

        <RadioButton
                android:id="@+id/rb_RolRoeier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rollSelector_rb_Roeier"
                android:checked="true"
                android:layout_marginTop="67dp" android:textSize="32sp"/>
        <RadioButton
                android:id="@+id/rb_RolLoods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rollSelector_rb_Loods"
                android:textSize="32sp"/>
    </RadioGroup>

    <Button
            android:id="@+id/btn_Submit"
            android:onClick="submit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/rollSelector_btn_submit"
            android:layout_marginBottom="50dp" android:textSize="25sp" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
